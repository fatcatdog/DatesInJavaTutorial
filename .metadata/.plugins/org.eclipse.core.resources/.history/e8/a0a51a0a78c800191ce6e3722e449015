package unfinished;

import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;
import java.util.Scanner;

public class NotFinished {
	
	private static final DateFormat dateFormat = new SimpleDateFormat("MM/dd/yyyy");
		
		public static void main(String[] args) throws ParseException {
			System.out.println("1. Lets print today's date without any type of manipulation: ");
			
			
			System.out.println("2. Lets try print out our date object with the help of our date formatter: ");

			
			System.out.println("3. Lets try print tomorrows date. Maybe we should try out the util.calendar helper package?");
			

			System.out.println("4. Lets try print yesterday's date. Maybe we should try out the util.calendar helper package?");
			
			//For those who finished early, lets build a quick program to run in the console 
			//that allows users to input their birth date. We can then tell them how many day's they have been alive!
			//We can also tell them how many day's until their birthday
	        System.out.println("Lets get user input");
	        
	        Scanner scanner = new Scanner(System.in);
	        
	        System.out.println("Please enter your birth date as mm/dd/yyyy");
	        
	        String userinput = scanner.nextLine();
	        
	        System.out.println("User inputted birthday: " + userinput);
	        
	        //this is just a string, so we can provide as much user input validation here as we want
	        
	        String[] words = userinput.split("/");
	        
	        if(words.length != 3) {
	        	System.out.println("Sorry invalid input...");
	        	return;
	        }
	        
	        System.out.println("Our array is: " + words);
	        
	        for(int i = 0; i < words.length; i++) {
	        	System.out.println(words[i]);
	        }

	        Date ourBirthdayDateObject = dateFormat.parse(userinput);
	        
	        System.out.println("Your birthday is: " + ourBirthdayDateObject);

		}
}
